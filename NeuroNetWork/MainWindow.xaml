        <TextBlock x:Name="textinput1" HorizontalAlignment="Left" Margin="308,14,0,0" TextWrapping="Wrap" Text="sepal length" VerticalAlignment="Top" Height="16" Width="103" FontSize="10.667" TextAlignment="Right"/>
        <TextBox x:Name="input1" HorizontalAlignment="Left" Height="17" Margin="416,13,0,0" TextWrapping="Wrap" Text="5,5" VerticalAlignment="Top" Width="41" RenderTransformOrigin="0.208,-0.472" FontSize="8"/>
